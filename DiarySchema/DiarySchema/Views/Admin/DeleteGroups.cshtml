@model DiarySchema.Models.Groups

@{
    Layout = "~/Views/Shared/_LayoutAdminAdd.cshtml";
}


<main>
    <div class="row" style="padding-top: 30px;padding-bottom: 30px;">
        <div class="container">
            <h1 align="center">Группа</h1>
            <div class="container col-xs-6 col-xs-offset-3" style="border:solid; background-color:#93FE83; padding:10px; border-radius: 20px;">
                @using (Html.BeginForm())
                {
                    @*@Html.AntiForgeryToken()*@
                    <div class="form-group">
                        <p class="control-label col-xs-6">№:</p>
                        <div class="col-xs-6">
                            <p>@Model.Number</p>                            
                        </div>
                    </div>
                    <div class="form-group">
                        <p class="control-label col-xs-6">Год поступления:</p>
                        <div class="col-xs-6">
                            <p>@Model.YearOfAdmission</p>                           
                        </div>
                    </div>
                    <div class="form-group">
                        <p class="control-label col-xs-6">Факультет:</p>
                        <div class="col-xs-6">
                            <p>@Model.Faculty</p>                            
                        </div>
                    </div>
                    <div class="form-group">
                        <p class="control-label col-xs-6">Высшее образование:</p>
                        <div class="col-xs-6">
                            <p>@Model.Degree</p>                           
                        </div>
                    </div>
                    <div class="form-group">
                        <p class="control-label col-xs-6">Форма обучения:</p>
                        <div class="col-xs-6">
                            <p>@Model.FormOfStudy</p>                           
                        </div>
                    </div>   
                    <div class="form-group">
                        <p class="control-label col-xs-6" >Староста группы:</p>
                        <div class="col-xs-6">
                           <p>@Model.MonitorId</p>                            
                        </div>
                    </div>                    
                    <div class="col-xs-6 col-xs-offset-6">
                        <input type="hidden" value=@ViewBag.Id name="Id" />
                        <input type="submit" value="Удалить" class="btn btn-danger" />                       
                    </div>
                }
            </div>
        </div>
    </div>
</main>


